@{
    ViewData["Title"] = "Achievements";
}

<!-- AOS CSS -->
<link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">

<!-- Section Header -->
<div class="container my-5 text-center" data-aos="fade-down" data-aos-duration="1200">
    <h2 class="fw-bold">Achievements</h2>
    <p class="lead mt-2">Recognitions for innovation, leadership, and technical excellence</p>
</div>

<!-- Achievements Grid -->
<div class="container my-4">
    <div class="row g-4 justify-content-center">

        <!-- IEEE Best Student -->
        <div class="col-md-6" data-aos="zoom-in-up" data-aos-delay="100">
            <div class="achievement-card p-4 border rounded shadow-sm bg-white h-100">
                <h5 class="fw-bold">IEEE Best Student Award – 2024</h5>
                <p>Recognized by IEEE Bhubaneswar Subsection for exceptional student leadership and project innovation.</p>
            </div>
        </div>

        <!-- SIH Finalist 2023 -->
        <div class="col-md-6" data-aos="zoom-in-up" data-aos-delay="200">
            <div class="achievement-card p-4 border rounded shadow-sm bg-white h-100">
                <h5 class="fw-bold">Smart India Hackathon Finalist – 2023</h5>
                <p>Selected nationally for the final round of India's largest government-organized hackathon.</p>
            </div>
        </div>

        <!-- YESIST 12 Winner -->
        <div class="col-md-6" data-aos="zoom-in-up" data-aos-delay="300">
            <div class="achievement-card p-4 border rounded shadow-sm bg-white h-100">
                <h5 class="fw-bold">IEEE YESIST 12 – Winner (Prelims, 2025)</h5>
                <p>Won the preliminary round for YESIST 12 Innovation Challenge 2025 with a smart social impact project.</p>
            </div>
        </div>

        <!-- YESIST 12 Runner-Up -->
        <div class="col-md-6" data-aos="zoom-in-up" data-aos-delay="400">
            <div class="achievement-card p-4 border rounded shadow-sm bg-white h-100">
                <h5 class="fw-bold">IEEE YESIST 12 – 2nd Runners-Up (2023)</h5>
                <p>Secured 2nd Runners-Up in the 2023 YESIST 12 prelims for impactful project development.</p>
            </div>
        </div>

        <!-- IEEE Global Top 100 -->
        <div class="col-md-6" data-aos="zoom-in-up" data-aos-delay="500">
            <div class="achievement-card p-4 border rounded shadow-sm bg-white h-100">
                <h5 class="fw-bold">Top 100 – IEEE Connecting the Unconnected (2024)</h5>
                <p>Global Top 100 finalist in IEEE's Connecting the Unconnected Challenge for solar-powered LiFi innovation.</p>
            </div>
        </div>

        <!-- Sparkathon Winner -->
        <div class="col-md-6" data-aos="zoom-in-up" data-aos-delay="600">
            <div class="achievement-card p-4 border rounded shadow-sm bg-white h-100">
                <h5 class="fw-bold">Winner – IEEE Sparkathon 2023</h5>
                <p>Won the VSSUT intra-college IEEE hardware hackathon for a real-time communication prototype.</p>
            </div>
        </div>

        <!-- NSSC Finalist -->
        <div class="col-md-6" data-aos="zoom-in-up" data-aos-delay="700">
            <div class="achievement-card p-4 border rounded shadow-sm bg-white h-100">
                <h5 class="fw-bold">Finalist – National Student Space Challenge (NSSC)</h5>
                <p>Reached the finals of NSSC 2024 hosted by IIT Kharagpur for an innovative space-tech solution.</p>
            </div>
        </div>

        <!-- SIH 2024 – 1st Runners-Up -->
        <div class="col-md-6" data-aos="zoom-in-up" data-aos-delay="800">
            <div class="achievement-card p-4 border rounded shadow-sm bg-white h-100">
                <h5 class="fw-bold">Smart India Hackathon – 1st Runners-Up (Prelims, 2024)</h5>
                <p>Awarded 1st Runners-Up in the preliminary round of SIH 2024 for innovative problem-solving.</p>
            </div>
        </div>

        <!-- YESIST 12 Finalist @ Malaysia -->
        <div class="col-md-6" data-aos="zoom-in-up" data-aos-delay="900">
            <div class="achievement-card p-4 border rounded shadow-sm bg-white h-100">
                <h5 class="fw-bold">Finalist – IEEE YESIST 12 (2025), UKM Malaysia</h5>
                <p>Represented India as a finalist at the YESIST 12 2025 global finals hosted by UKM Student Branch, Malaysia.</p>
            </div>
        </div>

    </div>
</div>

<!-- Master Certificate Button -->
<div class="text-center my-5" data-aos="fade-up" data-aos-delay="1000">
    <a href="https://drive.google.com/file/d/1gXO1jOQ0NkYaetT-h9vW73EsNgoGDBtU/view?usp=sharing"
       target="_blank"
       class="btn btn-lg btn-outline-success">
        View All Achievement Certificates
    </a>
</div>

<!-- AOS JS -->
<script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
<script>
    AOS.init();
</script>

<style>
    .achievement-card {
        transition: transform 0.4s ease, box-shadow 0.4s ease;
        border-left: 5px solid #198754;
    }

    .achievement-card:hover {
        transform: translateY(-5px) scale(1.02);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
    }
</style>
